@model IEnumerable<ThMoCo.Api.DTO.ProductDTO>

<h1>Product List</h1>

<div class="row">
    @foreach (var product in Model)
    {
            <div class="col-md-4">
                <div class="card mb-4 box-shadow">
                    <img class="card-img-top" 
                         src="@(string.IsNullOrEmpty(product.ImageUrl) ? Url.Content("~/photos/default-product-image.webp") : product.ImageUrl)" 
                         alt="@product.Name" 
                         style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5>@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <p><strong>Category:</strong> @product.Category</p>
                        <p><strong>Price:</strong> @product.Price.ToString("C")</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                                <button type="button" class="btn btn-sm btn-outline-secondary" @(product.IsAvailable ? "" : "disabled")>Buy</button>
                            </div>
                            <small class="text-muted">@product.StockQuantity left</small>
                        </div>
                    </div>
                </div>
            </div>
    }
</div>
